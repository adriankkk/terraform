terraform {
  required_providers {
    azurerm = {
      source  = "registry.terraform.io/hashicorp/azure"
      version = "=2.5.0"
    }
  }
}

provider "azurerm" {
    features {}  
}

resource "azurerm_resource_group" "terra_test" {
  name                  = "terra_main_rg"
  location              = "West Europe"
}

resource "azure_container_group" "terra_cont_group" {
  name                  = "weatherapi"
  location              = azurerm_resource_group.terra_test.location
  resource_group_name   = azurerm_resource_group.terra_test.name
  ip_address_type       = "public"
  dns_name_label        = "terra_dns_label"
  os_type               = "Linux"

  container {
      name           = "weatherapi"
      image          = "kuczuraa/weatherapi"
      cpu            = "1"
      memory         = "1"
  }      
      ports {
          port       = 80
          protocol   = "TCP"
      }
}